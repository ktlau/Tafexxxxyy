<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="50" >
			<TextBlock Text="Universal Calculator" FontSize="48" FontWeight="Bold"/>
			<HyperlinkButton x:Name="mathsCalculatorButton" Content="Maths Calculator" HorizontalAlignment="Center" FontSize="32" Margin="50" Click="mathsCalculatorButton_Click" />
			<HyperlinkButton x:Name="mortgageCalculatorButton" Content="Mortgage Calculator" HorizontalAlignment="Center" FontSize="32" Margin="50" Click="mortgageCalculatorButton_Click" />
			<HyperlinkButton x:Name="currencyConverterButton" Content="Currency Calculator" HorizontalAlignment="Center" FontSize="32" Margin="50" Click="currencyConverterButton_Click" />
			<Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Center" FontSize="32" Margin="50" />

		</StackPanel>
		<StackPanel>
			<Image x:Name="abacusImage" Width="150" Height="150" Source="Images/Abacus.PNG" HorizontalAlignment="Right" />
		</StackPanel>

	</Grid>
</Page>
